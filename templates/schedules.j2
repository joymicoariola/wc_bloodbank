{% extends 'layout.j2' %}

{% block header %}
  <h1>{% block title %}Schedules{% endblock %}</h1>
{% endblock %}

{% block content %}
 <div>
      <form id="newSchedule" action="/add_new_schedule" method="post">
        <u><legend>Add new appointment</legend></u>
        <br>
        <label for="scheduleDate">Date*</label>
        <input type="date" name="scheduleDate" id="scheduleDate">
        <label for="startTime">Start Time*</label>
        <input type="time" name="startTime" id="startTime">
        <label for="endTime">End Time*</label>
        <input type="time" name="endTime" id="endTime">
        <a style="font-size:12px;">* denotes required field</a>
        <input type="submit" value="Add Schedule">
      </form>
    </div>

    <br>

    <table class="dataTable" border="1">
    <thead>
    <tr>
        <th>Bank ID</th>
        <th>Schedule Date</th>
        <th>Start Time</th>
        <th>End Time</th>
    </tr>
    <tbody>
    {% for item in people %}
    <tr>
        <td>{{item['name']}}</td>
        <td>{{item['name']}}</td>
        <td>{{item['location']}}</td>
        <td>{{item['favorite_color']}}</td>
        <td><input type="submit" formmethod="post" value="Delete"></td>
        <td><input type="submit" formmethod="post" value="Update"></td>
    </tr>
    {% endfor %}
    </table>
{% endblock %}