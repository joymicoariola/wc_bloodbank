{% extends 'layout.j2' %}

{% block header %}
  <h1>{% block title %}Phlebotomists{% endblock %}</h1>
{% endblock %}

{% block content %}
    <div>
      <form id="newPhlebotomist" action="/add_new_phlebotomist" method="post">
        <u><legend>Add phlebotomists</legend></u>
        <br>
        <label for="donatedDate">Bank ID*</label>
        <input type="text" name="bankID" id="bankID">
        <label for="donatedDate">First Name*</label>
        <input type="text" name="firstName" id="firstName">
        <label for="donatedDate">Last Name*</label>
        <input type="text" name="lastName" id="lastName">
        <label for="donatedDate">License Expiration*</label>
        <input type="text" name="licenseExpiration" id="licenseExpiration">
        <label for="donatedDate">Phone*</label>
        <input type="text" name="phone" id="phone">
        <a style="font-size:12px;">* denotes required field</a>
        <input type="submit" value="Add Phlebotomist">
      </form>
    </div>
    
    <br>
    <br>
    
    <table class="dataTable" border="1">
    <thead>
    <tr>
        <th>Bank ID</th>
        <th>First Name</th>
        <th>Last Name</th>
        <th>License Expiration</th>
    </tr>
    <tbody>
    {% for item in people %}
    <tr>
        <td>{{item[1]}}</td>
        <td>{{item[2]}}</td>
        <td>{{item[3]}}</td>
        <td>{{item[4]}}</td>
        <td><input type="submit" formmethod="post" value="Delete"></td>
        <form id="updatePhlebotomist" action="{{ url_for('update_phlebotomist', rowId=item[0]) }}" method="post">
          <td><input type="submit" value="Update"></td>
        </form>
    </tr>
    {% endfor %}
    </table>
{% endblock %}